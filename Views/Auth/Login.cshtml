@model NeorisFrontend.Models.LoginRequest

@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-container">
    <div class="login-box">
        <div class="login-header">
            <h2>&#128274; Iniciar Sesi&oacute;n</h2>
            <p class="subtitle">Sistema de Gesti&oacute;n Neoris PT</p>
        </div>
        
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                <strong>&#9888; Error:</strong> @ViewBag.Error
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <strong>&#9888; Error:</strong> @TempData["Error"]
            </div>
        }

        @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "login-form" }))
        {
            @Html.AntiForgeryToken()
            
            <div class="form-group">
                @Html.LabelFor(m => m.Username, "Usuario", new { @class = "control-label" })
                <div class="input-with-icon">
                    <span class="input-icon">&#128100;</span>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Ingrese su usuario", autocomplete = "username" })
                </div>
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, "Contraseña", new { @class = "control-label" })
                <div class="input-with-icon">
                    <span class="input-icon">&#128274;</span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Ingrese su contraseña", autocomplete = "current-password" })
                </div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">
                    &#9658; Ingresar al Sistema
                </button>
            </div>
        }

        <div class="login-info">
            <div class="info-header">
                <span class="info-icon">&#8505;</span>
                <strong>Credenciales de Acceso</strong>
            </div>
            <div class="credentials-box">
                <p><strong>Usuario:</strong> <code>neoris-pt-frontend</code></p>
                <p><strong>Contrase&ntilde;a:</strong> <code>SecurePassword2026#NeorisSecure</code></p>
            </div>
            <p class="info-note">
                <em>Estas credenciales est&aacute;n configuradas en el backend (Web.config)</em>
            </p>
        </div>
    </div>
</div>

@section scripts {
    @* jQuery validation no está instalado, la validación se hace en el servidor *@
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 80vh;
            padding: 20px;
        }

        .login-box {
            background: white;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            max-width: 500px;
            width: 100%;
            animation: fadeIn 0.5s ease;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .login-header h2 {
            margin: 0 0 5px 0;
            color: #333;
            font-size: 2em;
        }

        .subtitle {
            color: #666;
            margin: 0;
            font-size: 0.95em;
        }

        .alert {
            padding: 12px 15px;
            margin-bottom: 20px;
            border-radius: 8px;
            border-left: 4px solid;
        }

        .alert-danger {
            background-color: #f8d7da;
            border-color: #dc3545;
            color: #721c24;
        }

        .login-form .form-group {
            margin-bottom: 20px;
        }

        .control-label {
            display: block;
            font-weight: 600;
            margin-bottom: 8px;
            color: #333;
            font-size: 0.95em;
        }

        .input-with-icon {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.2em;
            z-index: 1;
        }

        .form-control {
            width: 100%;
            padding: 14px 14px 14px 45px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 15px;
            transition: all 0.3s ease;
            box-sizing: border-box;
        }

        .form-control:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .text-danger {
            color: #dc3545;
            font-size: 13px;
            margin-top: 5px;
            display: block;
        }

        .btn {
            padding: 14px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
        }

        .btn-block {
            width: 100%;
            display: block;
        }

        .login-info {
            margin-top: 30px;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 8px;
            border: 1px solid #e0e0e0;
        }

        .info-header {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 15px;
            color: #333;
        }

        .info-icon {
            font-size: 1.3em;
        }

        .credentials-box {
            background: white;
            padding: 15px;
            border-radius: 6px;
            border-left: 4px solid #667eea;
            margin-bottom: 10px;
        }

        .credentials-box p {
            margin: 8px 0;
            color: #555;
        }

        .credentials-box code {
            background: #f4f4f4;
            padding: 4px 8px;
            border-radius: 4px;
            color: #d63384;
            font-family: 'Courier New', monospace;
            font-size: 0.9em;
        }

        .info-note {
            color: #666;
            font-size: 0.85em;
            margin: 10px 0 0 0;
            text-align: center;
        }

        @@media (max-width: 576px) {
            .login-box {
                padding: 25px;
            }

            .login-header h2 {
                font-size: 1.6em;
            }
        }
    </style>
}
