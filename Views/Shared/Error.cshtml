@{
    ViewBag.Title = "Error";
    var statusCode = ViewBag.Model?.StatusCode ?? 500;
    var message = ViewBag.Model?.Message ?? "Ha ocurrido un error inesperado";
}

<div class="error-container">
    <div class="error-icon">⚠️</div>
    <h1>Error @statusCode</h1>
    <p class="error-message">@message</p>
    
    <div class="error-actions">
        @Html.ActionLink("Volver al Inicio", "Index", "Home", null, new { @class = "btn btn-primary" })
        <a href="javascript:history.back()" class="btn btn-secondary">Regresar</a>
    </div>
</div>

@section scripts {
    <style>
        .error-container {
            text-align: center;
            padding: 60px 20px;
            max-width: 600px;
            margin: 0 auto;
        }
        .error-icon {
            font-size: 80px;
            margin-bottom: 20px;
            animation: shake 0.5s;
        }
        .error-container h1 {
            color: #dc3545;
            font-size: 36px;
            margin-bottom: 15px;
        }
        .error-message {
            font-size: 18px;
            color: #666;
            margin-bottom: 30px;
            line-height: 1.6;
        }
        .error-actions {
            margin-top: 30px;
        }
        .btn {
            padding: 12px 24px;
            text-decoration: none;
            border-radius: 4px;
            display: inline-block;
            margin: 5px;
            border: none;
            cursor: pointer;
            font-size: 16px;
        }
        .btn-primary {
            background-color: #007bff;
            color: white;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }
        .btn-secondary:hover {
            background-color: #545b62;
        }
        
        @@keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-10px); }
            75% { transform: translateX(10px); }
        }
    </style>
}
